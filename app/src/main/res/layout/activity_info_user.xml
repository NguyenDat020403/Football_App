<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".InfoUserActivity">

    <ImageView
        android:id="@+id/imvPhotoUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher_background" />


    <TextView
        android:id="@+id/txtChangePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imvPhotoUser"
        android:layout_marginTop="15dp"
        android:text="Cập nhật"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtChangePhoto"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/promptlight"
            android:text="Name:"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/edtNameUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:enabled="false"
            android:fontFamily="@font/promptlight"
            android:text="Nguyen Dat"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txtChangeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/promptlight"
            android:text="Email:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtEmailUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:enabled="false"
            android:text="abc@gmail.com"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtChangeEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveChange"

        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_toRightOf="@+id/imvPhotoUser"
        android:text="Lưu"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSaveChange"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@+id/imvPhotoUser"
        android:text="Đổi mật khẩu"
        android:textSize="20dp" />

    <Button
        android:gravity="center"
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout2"
        android:layout_marginTop="350dp"
        android:text="Đăng xuất"
        android:textSize="20dp" />
</RelativeLayout>