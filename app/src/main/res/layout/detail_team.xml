<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#F3ECEC"
    android:gravity="center">

    <LinearLayout
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/imvphotoPlayer"
            android:src="@drawable/baseline_leaderboard_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/promptmedium"
            android:layout_weight="4"
            android:id="@+id/txtnamePlayer"
            android:textSize="18sp"
            android:text="Nguyen Dat"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/promptlight"
            android:layout_weight="4"
            android:id="@+id/txttypePlayer"
            android:textSize="18sp"
            android:text="Goalkeeper"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/promptlight"
            android:layout_weight="1"
            android:id="@+id/txtagePlayer"
            android:textSize="16sp"
            android:text="21"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/promptlight"
            android:layout_weight="2"
            android:id="@+id/txtnumberPlayer"
            android:textSize="16sp"
            android:text="6.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>