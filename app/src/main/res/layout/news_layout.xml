<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#141927">

       <LinearLayout
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:padding="10dp"
               android:id="@+id/imvNewsPhoto"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_gravity="center"
               android:src="@drawable/premier_league" />
           <TextView
               android:layout_margin="13dp"
               android:id="@+id/txtTitle"
               android:textColor="@color/white"
               android:fontFamily="@font/promptmedium"
               android:textSize="16dp"
               android:text="Why Arsenal winning in Champions League is good news for Tottenham Hotspur"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>

</LinearLayout>