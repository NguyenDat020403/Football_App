<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchEvents"
    android:orientation="vertical"
    android:background="#F3ECEC"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#5889FF"
        android:weightSum="10">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/competition_1_small" />

        <TextView
            android:gravity="center"
            android:layout_weight="9"
            android:id="@+id/txtWeek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Matchweek 27"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="146dp"
            android:layout_height="41dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/txtNgay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Thứ 3 - 25/2/2003 "
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:text="Lịch thi đấu Ngoại hạng Anh"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:padding="5dp"
        android:id="@+id/lvMatch"
        android:layout_width="match_parent"
        android:layout_height="541dp"
        android:layout_marginTop="10dp" />
</LinearLayout>