<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchEvents"
    android:orientation="vertical"
    android:background="#F3ECEC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#5889FF"
        android:weightSum="10">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/competition_1_small" />

        <TextView
            android:gravity="center"
            android:layout_weight="9"
            android:id="@+id/txtWeek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Matchweek 27"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <Spinner
        android:id="@+id/spinner"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:id="@+id/txtNgay"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Thứ 3 - 25/2/2003 "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Lịch thi đấu Ngoại hạng Anh"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/lvMatch"
        android:layout_width="match_parent"
        android:layout_height="541dp"
        android:layout_marginTop="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">
        <ImageView
            android:id="@+id/imvBXH"
            android:layout_weight="1"
            android:src="@drawable/baseline_leaderboard_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imgTopPlayer"
            android:layout_weight="1"
            android:src="@drawable/baseline_person_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imvHome"
            android:layout_weight="1"
            android:src="@drawable/baseline_home_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imvLichThiDau"
            android:layout_weight="1"
            android:src="@drawable/baseline_table_chart_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imvThoat"
            android:layout_weight="1"
            android:src="@drawable/baseline_east_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>