<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#F3ECEC"
    android:gravity="center"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_marginTop="40dp"
        android:weightSum="14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_weight="2"
                android:id="@+id/txtTime"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="03:00"
                android:textSize="20sp" />
        <LinearLayout
            android:layout_weight="12"
            android:weightSum="15"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:id="@+id/txtDoi1"
                android:textSize="20sp"
                android:text="Manchester City"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="5dp"

                android:id="@+id/imvAnhDoi1"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginRight="5dp"
                android:background="#15103E"
                android:id="@+id/txtTiSo"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:text="3 - 1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/imvAnhDoi2"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/txtDoi2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="left"
                android:text="Manchester City"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnMatchDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:weightSum="14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_weight="3"
                android:id="@+id/txtBallPossession"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Cầm bóng"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_weight="11"
                android:weightSum="17"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:id="@+id/txtBallPossessionHome"
                    android:textSize="12sp"
                    android:text="80%"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text=" - "
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/txtBallPossessionAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="left"
                    android:text="20%"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_weight="3"
                android:id="@+id/txtCorners"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Phạt góc"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_weight="11"
                android:weightSum="17"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:id="@+id/txtCornersHome"
                    android:textSize="12sp"
                    android:text="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text=" - "
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/txtCornersAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="left"
                    android:text="5"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_weight="3"
                android:id="@+id/txtOffsides"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Việt vị"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_weight="11"
                android:weightSum="17"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:id="@+id/txtOffsidesHome"
                    android:textSize="12sp"
                    android:text="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text=" - "
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/txtOffsidesAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="left"
                    android:text="2"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_weight="3"
                android:id="@+id/txtFouls"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Phạm lỗi"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_weight="11"
                android:weightSum="17"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:id="@+id/txtFoulsHome"
                    android:textSize="12sp"
                    android:text="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text=" - "
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/txtFoulsAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="left"
                    android:text="5"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_weight="3"
                android:id="@+id/txtShotsTotal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Số lấn sút"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_weight="11"
                android:weightSum="17"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:id="@+id/txtShotsTotalHome"
                    android:textSize="12sp"
                    android:text="12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text=" - "
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/txtShotsTotalAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="left"
                    android:text="4"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_weight="3"
                android:id="@+id/txtShotsOnGoal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Sút trúng đích"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_weight="11"
                android:weightSum="17"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:id="@+id/txtShotsOnGoalHome"
                    android:textSize="12sp"
                    android:text="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text=" - "
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/txtShotsOnGoalAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="left"
                    android:text="5"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:fontFamily="@font/promptmedium"
                android:text="@string/xem_highlight"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:id="@+id/btnHighlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>