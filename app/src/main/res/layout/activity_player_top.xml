<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerTopActivity"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="#F3ECEC"
    >
    <TextView
        android:layout_marginLeft="10sp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Số bàn thắng:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Vận động viên"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Số bàn thắng"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvTopScore"
        android:layout_width="match_parent"
        android:layout_height="330dp" />
    <TextView
        android:layout_marginLeft="10sp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Số kiến tạo:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Vận động viên"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Số kến tạo"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lvTopAss"
        android:layout_width="match_parent"
        android:layout_height="330dp" />
</LinearLayout>